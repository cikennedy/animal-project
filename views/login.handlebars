<section class="login-signup-container">
<form class="login-form">
  <div>
    <input type="text" id="email-login" placeholder="Email: " />
  </div>
  <div>
    <input type="password" id="password-login" placeholder="Password: " />
  </div>
  <div>
    <button type="submit">Log In</button>
  </div>
</form>

<form class="signup-form">
  <div>
    <input type="text" id="name-signup" placeholder="Enter Username" />
  </div>
  <div>
    <input type="text" id="email-signup" placeholder="Enter Email" />
  </div>
  <div>
    <input type="password" id="password-signup" placeholder="Enter Password" />
  </div>
  <div>
    <button type="submit">Sign Up</button>
  </div>
</form>
</section>
<script src="/js/login.js"></script>
<script src="/js/signup.js"></script>

