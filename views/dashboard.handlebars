    <form class="wrapper create-post-form">
        <aside id="asidewidth">
            {{!-- <section class="log-flex-container" class="create-post"> --}}
                <section>

                    {{!-- <h1>Enter A NEW Profile</h1> --}}
                    <div>
                        <div>
                            <label id="lable" for="post-name">Your Fiends Name</label> </br>
                            <input type="text" name="post-title" id="post-name" />
                        </div>
                        <div>
                            <label id="lable" for="post-location">Location last seen</label> </br>
                            <input type="text" name="post-description" id="post-description" />
                        </div>
                        <div>
                            <label id="lable" for="post-content">Describe your friend</label> </br>
                            <textarea class="textarea resize-ta"></textarea>
                            <input type="text" name="post-description" id="post-description" />
                        </div>
                        <label>Animal Type</label>
                        <select id="animalType">
                            <option value='cat'>Cat</option>
                            <option value='dog'>Dog</option>
                            <option value='bunny'>Bunny</option>
                        </select>
                        <img id='previewPic'></img>
                        <button class="animalSubmit" type="submit" class="btn">Post Animal</button>
                    </div>
                </section>
        </aside>

        <div class="divborder">
            <button id="upload_widget" class="cloudinary-button">Upload Photo</button>
            <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
            <script type="text/javascript">
            console.log('UPLOAD script code happeing!!')
                var myWidget = cloudinary.createUploadWidget({
                    cloudName: 'dyz1jgp39',
                    uploadPreset: 'wpm89gsd'
                }, (error, result) => {
                   // console.log('RESULT', result)
                    if (!error && result && result.event === "success") {
                        console.log('Done! Here is the image info: ', result.info);

                       var pic = document.getElementById('previewPic')
                       pic.setAttribute('src', result.info.secure_url)
                    }
                    //console.log('ERRRRRR', error)
                })

                document.getElementById("upload_widget").addEventListener("click", function (event) {
                    event.preventDefault()
                    console.log('UPload image clicked!!!')
                    myWidget.open();
                }, false);
               
            </script>
 </div>
    </form>


    <div class="list-posts">
        {{#if posts.length}}
        <h1>Your Profile</h1>
        <ol>
            {{#each posts as |post|}}
            {{> post-in-dashboard post}}
            {{/each}}
        </ol>
        {{/if}}
    </div>

</section>

